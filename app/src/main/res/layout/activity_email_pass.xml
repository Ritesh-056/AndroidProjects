<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_white_own"
    android:padding="8dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/back"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Getting started "
                    android:textColor="@color/text_overall"
                    android:textSize="@dimen/text_heading"
                    android:textAlignment="center"

                    />



                <TextView
                    android:layout_below="@id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create an account"
                    android:textColor="@color/text_dim"
                    android:textSize="@dimen/text_dim"
                    android:textAlignment="center"

                    />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_below="@id/top"
        android:layout_above="@id/bottom"
        >


        <LinearLayout
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                >


                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:textSize="@dimen/text_normal"
                    android:textColor="@color/text_overall"
                    android:text="Email:"

                    />

                <EditText
                    android:id="@+id/mEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email-id"
                    android:backgroundTint="@color/text_dim"
                    android:textColor="@color/text_overall"
                    android:textSize="@dimen/text_normal"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"

                >



                <TextView
                    android:textSize="@dimen/text_normal"
                    android:id="@+id/old_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_overall"
                    android:text="Password:"

                    />

                <EditText
                    android:id="@+id/mPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" ********"
                    android:backgroundTint="@color/text_dim"
                    android:textColor="@color/text_overall"
                    android:textSize="@dimen/text_normal"
                    android:inputType="textPassword"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_password_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone"


                >


                <TextView
                    android:id="@+id/new_Password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#131212"
                    android:text="New Password:"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/new_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:hint=" **********"
                    android:backgroundTint="#9E8B73"
                    />



            </LinearLayout>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password ?"
                android:textSize="@dimen/text_dim"
                android:textColor="@color/main_top_own"
                android:layout_gravity="end"

                />


        </LinearLayout>
        <Button
            android:layout_below="@id/user_password"
            android:id="@+id/btn_login_forget"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Login"
            android:backgroundTint="#FFB72B"
            android:layout_marginTop="8dp"
            android:visibility="gone"

            />

        <Button
            android:layout_below="@id/btn_login_forget"
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Login"
            android:textSize="@dimen/text_dim"
            android:layout_marginTop="32dp" />



        <Button
            android:id="@+id/btn_sign_up"
            android:layout_below="@id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_dim"
            android:text="sign up"
            android:layout_marginTop="8dp" />


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_below="@id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp" />







    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/lArrow"
                android:padding="2dp"
                android:layout_gravity="center|start"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_left"
                android:background="@drawable/arrow_backgroud"
                />

            <!--                <ImageView-->
            <!--                    android:id="@+id/rArrow"-->
            <!--                    android:padding="2dp"-->
            <!--                    android:layout_gravity="center|end"-->
            <!--                    android:layout_width="80dp"-->
            <!--                    android:layout_height="30dp"-->
            <!--                    android:src="@drawable/ic_arrow_right"-->
            <!--                    android:background="@drawable/arrow_backgroud"-->
            <!--                    />-->

        </FrameLayout>


    </RelativeLayout>




</RelativeLayout>