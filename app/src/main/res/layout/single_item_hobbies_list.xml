<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout

        android:id="@+id/main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/item_list_background"
        android:padding="8dp"

        >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_hobbies"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/back"
                    app:civ_border_color="@color/main_top_own"
                    app:civ_border_width="2dp"

                    />


                <TextView
                    android:id="@+id/title_hobbies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="Singing / Dancing"
                    android:textColor="@color/text_overall"
                    android:textSize="@dimen/text_normal"

                    />


                <ImageView
                    android:id="@+id/image_delete"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_delete"
                    android:text="Delete this" />

            </FrameLayout>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>